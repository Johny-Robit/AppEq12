{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/backend/manage.py",
            "args": ["runserver", "--noreload"],
            "django": true,
            "autoStartBrowser": false,
            "justMyCode": false,
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "DJANGO_SETTINGS_MODULE": "eventify.settings",
                "DEBUG": "True"
            }
        }
    ]
}
